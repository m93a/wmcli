#-------------------------------------------------------------------------------
# Maintained by m93a
# https://wiki.archlinux.org/title/Rust_package_guidelines
#-------------------------------------------------------------------------------
pkgname=wmcli
pkgver=0.0.45
pkgrel=1
pkgdesc="Rust X11 automation"
url="https://github.com/m93a/wmcli"
arch=('x86_64')
depends=('glibc')
makedepends=('rust')
license=('MIT' 'APACHE')
source=("${pkgname-$pkgver}.tar.gz::https://github.com/m93a/${pkgname}/archive/refs/tags/v${pkgver}.tar.gz")
sha256sums=('12121e5376762f6b8e0f29db0e8adebb01214e9dd4a83443c76eb2ccdc7b5148')

prepare()
{
  cd "${srcdir}/${pkgname}-${pkgver}"
  rm -rf ".githooks .vscode"
  cargo fetch --target "$CARCH-unknown-linux-gnu"
}

check()
{
  cd "${srcdir}/${pkgname}-${pkgver}"
  rm -rf ".githooks .vscode"
  export RUSTUP_TOOLCHAIN=stable
  cargo test --frozen --all-features
}

build()
{
  cd "${srcdir}/${pkgname}-${pkgver}"
  rm -rf ".githooks .vscode"
  export RUSTUP_TOOLCHAIN=stable
  export CARGO_TARGET_DIR=target
  cargo build --frozen --release --all-features
}

package()
{
  # Remove cruft
  rm -rf ".githooks .vscode"

  # Create install directory structure
  install -dm 755 "$pkgdir"/{usr/bin,usr/share/"${pkgname}"}

  # Install package files
  cd "${srcdir}/${pkgname}-${pkgver}"
  install -Dm 644 LICENSE-MIT "${pkgdir}/usr/share/${pkgname}"
  install -Dm 644 LICENSE-APACHE "${pkgdir}/usr/share/${pkgname}"
  install -Dm 644 README.md "${pkgdir}/usr/share/${pkgname}"
  install -Dm 755 "target/release/wmcli" "${pkgdir}/usr/bin"
}

# vim: ts=2:sw=2:sts=2
