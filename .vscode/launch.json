    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'wmcli'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=wmcli",
                    "--package=wmcli"
                ],
                "filter": {
                    "name": "wmcli",
                    "kind": "bin"
                }
            },
            "args": [
                "-d",
                "shape",
                "max"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'wmcli'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=wmcli",
                    "--package=wmcli"
                ],
                "filter": {
                    "name": "wmcli",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'libewmh'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=libewmh"
                ],
                "filter": {
                    "name": "libewmh",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}